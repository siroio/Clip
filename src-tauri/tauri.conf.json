{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clip",
  "version": "0.1.0",
  "identifier": "com.rukar.clip",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Clip - タスク & メモ",
        "width": 900,
        "height": 650,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "visible": false
      },
      {
        "label": "palette",
        "title": "Clip",
        "url": "palette.html",
        "width": 600,
        "height": 80,
        "minWidth": 400,
        "minHeight": 60,
        "center": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "transparent": true,
        "skipTaskbar": true,
        "resizable": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
